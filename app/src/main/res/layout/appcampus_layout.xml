<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/btn_menu"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@drawable/img_btn_menu"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp">
    </ImageView>
    <TextView
        android:id="@+id/txt_appName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="20sp"
        android:text="Campus Expenese"
        android:layout_marginTop="10dp">
    </TextView>
    <ImageView
        android:id="@+id/btn_search"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/img_btn_search"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/txt_appName"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp">
    </ImageView>
    <ImageView
        android:id="@+id/btn_calendar"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/img_btn_calendar"
        app:layout_constraintLeft_toRightOf="@+id/btn_search"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10dp">
    </ImageView>
    <TextView
        android:id="@+id/txt_year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="/2025/"
        app:layout_constraintTop_toBottomOf="@+id/btn_menu"
        android:layout_marginTop="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="10dp">
    </TextView>

    <TextView
        android:id="@+id/txt_outCome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Outcome"
        app:layout_constraintTop_toBottomOf="@+id/txt_appName"
        app:layout_constraintLeft_toLeftOf="@+id/txt_appName"
        android:layout_marginTop="10dp">
    </TextView>
    <TextView
        android:id="@+id/txt_inCome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Income"
        app:layout_constraintTop_toBottomOf="@+id/txt_appName"
        app:layout_constraintRight_toRightOf="@+id/txt_appName"
        android:layout_marginTop="10dp">
    </TextView>
    <TextView
        android:id="@+id/txt_balance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Balance"
        app:layout_constraintTop_toBottomOf="@+id/btn_search"
        app:layout_constraintLeft_toLeftOf="@+id/btn_search"
        app:layout_constraintRight_toRightOf="@id/btn_calendar"
        android:layout_marginTop="10dp">
    </TextView>
    <TextView
        android:id="@+id/txt_month"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="/May/"
        app:layout_constraintTop_toBottomOf="@+id/txt_year"
        app:layout_constraintLeft_toLeftOf="@+id/txt_year"
        android:layout_marginTop="5dp"
        android:textSize="20sp">
    </TextView>


</androidx.constraintlayout.widget.ConstraintLayout>